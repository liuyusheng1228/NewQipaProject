<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_outside_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rl_inputdlg_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_bottomsheet_rv_lists"
            android:background="@color/white">

            <EditText
                android:id="@+id/et_input_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:maxHeight="120dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="top|left"
                android:hint="留下你的精彩评论吧~~"
                android:imeActionLabel="发送"
                android:imeOptions="actionDone"
                android:lineSpacingMultiplier="1.1"
                android:maxLength="100"
                android:maxLines="3"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:layout_marginRight="45dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/color99"
                android:textSize="@dimen/sp_12"
                tools:ignore="InvalidImeActionId" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray_61" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/gray_61" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/100"
                android:padding="@dimen/dp_10"
                android:textColor="@color/colorGray" />

            <TextView
                android:id="@+id/iv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:background="@drawable/button_shap"
                android:layout_alignParentRight="true"
                android:text="@string/txt_send"
                android:textSize="@dimen/sp_10"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:padding="@dimen/dp_5" />
        </RelativeLayout>


    </LinearLayout>




</RelativeLayout>