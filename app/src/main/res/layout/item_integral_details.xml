<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/txt_integral_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/sp_14"
            android:text="成就任务"
            />

        <TextView
            android:id="@+id/txt_integral_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@+id/txt_integral_detail_title"
            android:text="2021-09-12 14:58:45"
            android:textSize="@dimen/sp_12"

            />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_integral_detail_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorEF4"
        android:textStyle="bold"
        android:textSize="@dimen/sp_14"
        android:layout_gravity="center_vertical|end"
        android:text="+7"
        android:layout_marginRight="@dimen/dp_15"
        />

</LinearLayout>