<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
       >

        <!--头像-->
        <ImageView
            android:id="@+id/day_iv_header"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            />
        <!--用户名-->

        <LinearLayout
            android:id="@+id/lin_daiy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/day_iv_header"
            >
            <TextView
                android:id="@+id/tv_show_daiy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/now_score"
                android:textColor="@color/color99"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/iv_icon_yiwen"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/icon_yiwen"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                />


        </LinearLayout>


        <TextView
            android:id="@+id/txt_day_rise_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lin_daiy_title"
            android:layout_alignRight="@+id/lin_daiy_title"
            android:layout_below="@+id/lin_daiy_title"
            android:text="60"
            android:textColor="@color/colorEF4"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/btn_dail_take"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_button_green_round_2dp"
            />




    </RelativeLayout>

</RelativeLayout>