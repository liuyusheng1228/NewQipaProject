<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/game_game_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detail_icon"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_marginStart="@dimen/dp_15"
            android:contentDescription="@null"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_show_game_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="女神联盟"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_show_game_open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn_grey_bg_4"
                android:layout_below="@+id/tv_show_game_name"
                android:text="@string/open_time"
                android:padding="@dimen/dp_5"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_show_game_open_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_show_game_name"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/tv_show_game_open_time"
                android:textColor="@color/white"
                android:text="16:30开服"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />


        </RelativeLayout>
    </LinearLayout>


    </RelativeLayout>
    <data>

    </data>
</layout>