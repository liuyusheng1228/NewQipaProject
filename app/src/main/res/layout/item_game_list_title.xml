<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/include_game_top"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:contentDescription="@null"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/icon"
            android:includeFontPadding="false"
            android:text="太古封魔录"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toRightOf="@+id/score"
            android:text="仙侠 | MMORPG"
            android:gravity="bottom"
            android:textColor="#6B6B6B"
            android:textSize="@dimen/sp_11" />
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="daddsa"
            android:textSize="@dimen/sp_11"
            android:layout_below="@+id/name"
            android:textColor="#6B6B6B"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/icon"
            android:layout_marginTop="@dimen/dp_4"
            />
        <TextView
            android:id="@+id/server_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:05 新服"
            android:textSize="@dimen/sp_11"
            android:visibility="visible"
            android:layout_below="@+id/name"
            android:textColor="#4DB8BF"
            android:gravity="bottom"
            android:layout_toRightOf="@+id/types"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_9"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/labels"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@+id/types"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/icon"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        </androidx.recyclerview.widget.RecyclerView>


        <com.qipa.newboxproject.app.weight.NiceImageView
            android:id="@+id/big_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_170"
            android:layout_below="@+id/icon"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/update_app_bg"
            app:corner_radius="@dimen/dp_15" />

        <egolabsapps.basicodemine.videolayout.VideoLayout
            android:id="@+id/big_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_170"
            android:layout_below="@+id/icon"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/update_app_bg"
            app:corner_radius="@dimen/dp_15" />

    </RelativeLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_0_5"
       android:layout_marginLeft="@dimen/dp_10"
       android:layout_marginRight="@dimen/dp_10"
       android:background="@color/backgrounGrey"
       android:layout_marginTop="@dimen/dp_10"
       android:layout_marginBottom="@dimen/dp_10"
       />


</LinearLayout>