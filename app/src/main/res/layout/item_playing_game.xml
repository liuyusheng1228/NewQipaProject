<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/my_game_game_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_detail_icon"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_marginStart="@dimen/dp_15"
            android:contentDescription="@null"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_tv_show_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女神联盟"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/my_tv_show_game_open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_tv_show_game_name"
                android:text="@string/open_time"
                android:padding="@dimen/dp_5"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/teal_200"
                android:textSize="@dimen/sp_10" />

        </RelativeLayout>

        <Button
            android:id="@+id/my_game_goto_evaluate"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_25"
            android:text="@string/write_evaluation"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_11"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/bg_button_green_round_2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_btn_grey_game_bg"
        >
        <TextView
            android:id="@+id/my_tv_show_game_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帅哥和"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
             />

        <TextView
            android:id="@+id/my_tv_show_game_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_tv_show_game_user_name"
            android:text="1区|Lv.34"
            android:layout_marginLeft="@dimen/dp_8"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/texttipColor"
            android:layout_marginBottom="@dimen/dp_5"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>


</LinearLayout>