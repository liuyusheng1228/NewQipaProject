<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_recharge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/tv_recharge_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            />

        <TextView
            android:id="@+id/tv_recharge_value_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/color88"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rel_show_select"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:background="@drawable/onefourth_corners"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@mipmap/icon_select_gouxuan"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>



</RelativeLayout>